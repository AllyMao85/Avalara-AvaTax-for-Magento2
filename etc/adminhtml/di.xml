<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\Framework\Notification\MessageList">
        <arguments>
            <argument name="messages" xsi:type="array">
                <item name="avatax_queue" xsi:type="string">ClassyLlama\AvaTax\Model\Message\QueueNotification</item>
                <item name="avatax_queue_failure" xsi:type="string">ClassyLlama\AvaTax\Model\Message\QueueFailureNotification</item>
                <item name="avatax_queue_disabled" xsi:type="string">ClassyLlama\AvaTax\Model\Message\QueueDisabledNotification</item>
                <item name="avatax_config" xsi:type="string">ClassyLlama\AvaTax\Model\Message\ConfigNotification</item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Config\Model\Config\Structure\ConcealInProductionConfigList">
        <arguments>
            <argument name="configs" xsi:type="array">
                <item name="tax/avatax_general/production_company_id" xsi:type="const">Magento\Config\Model\Config\Structure\ElementVisibilityInterface::DISABLED</item>
                <item name="tax/avatax_general/development_company_id" xsi:type="const">Magento\Config\Model\Config\Structure\ElementVisibilityInterface::DISABLED</item>
            </argument>
        </arguments>
    </type>
    <preference for="Magento\Tax\Block\Adminhtml\Rule\Edit\Form" type="ClassyLlama\AvaTax\Block\Tax\Adminhtml\Rule\Edit\Form" />

    <virtualType name="developmentCompanyCodeFrontendModel" type="ClassyLlama\AvaTax\Block\Adminhtml\Form\Field\CompanyCode">
        <arguments>
            <argument name="data" xsi:type="array">
                <item name="account_number_id" xsi:type="string">tax_avatax_general_development_account_number</item>
                <item name="license_key_id" xsi:type="string">tax_avatax_general_development_license_key</item>
                <item name="company_code_id" xsi:type="string">tax_avatax_general_development_company_code</item>
                <item name="company_id_id" xsi:type="string">tax_avatax_general_development_company_id</item>
                <item name="avatax_mode" xsi:type="const">\ClassyLlama\AvaTax\Model\Config\Source\Mode::DEVELOPMENT</item>
            </argument>
        </arguments>
    </virtualType>

    <virtualType name="productionCompanyCodeFrontendModel" type="ClassyLlama\AvaTax\Block\Adminhtml\Form\Field\CompanyCode">
        <arguments>
            <argument name="data" xsi:type="array">
                <item name="account_number_id" xsi:type="string">tax_avatax_general_production_account_number</item>
                <item name="license_key_id" xsi:type="string">tax_avatax_general_production_license_key</item>
                <item name="company_code_id" xsi:type="string">tax_avatax_general_production_company_code</item>
                <item name="company_id_id" xsi:type="string">tax_avatax_general_production_company_id</item>
                <item name="avatax_mode" xsi:type="const">\ClassyLlama\AvaTax\Model\Config\Source\Mode::PRODUCTION</item>
            </argument>
        </arguments>
    </virtualType>
</config>
