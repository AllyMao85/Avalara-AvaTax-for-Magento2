<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">avatax_crossborder_classes_form.avatax_crossborder_classes_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">General Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="save_and_continue" class="ClassyLlama\AvaTax\Block\Adminhtml\CrossBorderClass\Edit\SaveAndContinueButton"/>
            <button name="save" class="ClassyLlama\AvaTax\Block\Adminhtml\CrossBorderClass\Edit\SaveButton"/>
            <button name="reset" class="ClassyLlama\AvaTax\Block\Adminhtml\CrossBorderClass\Edit\ResetButton"/>
            <button name="delete" class="ClassyLlama\AvaTax\Block\Adminhtml\CrossBorderClass\Edit\DeleteButton"/>
            <button name="back" class="ClassyLlama\AvaTax\Block\Adminhtml\CrossBorderClass\Edit\BackButton"/>
        </buttons>
        <namespace>avatax_crossborder_classes_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>avatax_crossborder_classes_form.avatax_crossborder_classes_data_source</dep>
        </deps>
    </settings>
    <dataSource name="avatax_crossborder_classes_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="avatax/crossborder_classes/save"/>
        </settings>
        <dataProvider class="ClassyLlama\AvaTax\Ui\DataProvider\CrossBorderClassDataProvider" name="avatax_crossborder_classes_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>class_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label/>
        </settings>
        <field name="destination_countries" sortOrder="5" formElement="multiselect">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">0</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>int</dataType>
                <label translate="true">Destination Countries</label>
                <dataScope>destination_countries</dataScope>
            </settings>
            <formElements>
                <multiselect>
                    <settings>
                        <options class="ClassyLlama\AvaTax\Model\Config\Source\CrossBorderClass\Countries"/>
                    </settings>
                </multiselect>
            </formElements>
        </field>
        <field name="cross_border_type" sortOrder="10" formElement="input">
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Cross Border Type</label>
                <dataScope>cross_border_type</dataScope>
            </settings>
        </field>
        <field name="hs_code" sortOrder="20" formElement="input">
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">HS Code</label>
                <dataScope>hs_code</dataScope>
            </settings>
        </field>
        <field name="unit_name" sortOrder="30" formElement="input">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Unit Name</label>
                <dataScope>unit_name</dataScope>
            </settings>
        </field>
        <field name="unit_amount_product_attr" sortOrder="40" formElement="input">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Unit Amount Product Attribute</label>
                <dataScope>unit_amount_product_attr</dataScope>
            </settings>
        </field>
        <field name="pref_program_indicator" sortOrder="50" formElement="input">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Pref. Program Indicator</label>
                <dataScope>pref_program_indicator</dataScope>
            </settings>
        </field>
    </fieldset>
</form>
